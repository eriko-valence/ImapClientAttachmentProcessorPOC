<Page
    x:Class="ImapAttachmentProcessorPOC.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ImapAttachmentProcessorPOC"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Loaded="PageLoaded">

    <Grid x:Name="LayoutGrid">
        <Button x:Name="ExportButton" Content="Export Data" Margin="389,284,0,0" VerticalAlignment="Top" FontSize="24" Click="ExportButton_Click"/>
        <TextBlock x:Name="ResultTextBlock" HorizontalAlignment="Left" Margin="344,522,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="24" SelectionChanged="ResultTextBlock_SelectionChanged" Width="277"/>
        <DatePicker x:Name="StartDate" Margin="336,376,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="EndDate" Margin="336,436,0,0" VerticalAlignment="Top"/>

    </Grid>
</Page>
